{% extends 'base.jinja' %}

{% block title %} Madlibs Stories {% endblock %}

{% block content %}

<h1 class="pt-4 mb-3 text-center">Madlib Stories!</h1>

<div class="ms-3 me-3">
    <form action="/stories/form" class="pb-4">
        <div class="mb-3 row">

            <label class="col-5 col-form-label text-end">Choose a story: </label>
            <div class="col-7">
                <select name="storylist">
                    {% for story_name in madlib_story_names %}
                        <option value="{{ story_name }}" name="story_name">{{ story_name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <button class="btn btn-primary btn-lg w-100">
            Choose Story!
        </button>
    </form>
</div>

{% endblock %}